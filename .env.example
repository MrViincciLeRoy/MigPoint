# Ad Provider Configuration
# Copy this file to .env and fill in your API keys

# Demo Mode (set to False when using real providers)
DEMO_ENABLED=True
FALLBACK_TO_DEMO=True

# Google AdMob
ADMOB_ENABLED=False
ADMOB_API_KEY=your_admob_api_key_here
ADMOB_APP_ID=ca-app-pub-xxxxxxxxxxxxx~xxxxxxxxxx

# Unity Ads
UNITY_ENABLED=False
UNITY_GAME_ID=your_unity_game_id
UNITY_API_KEY=your_unity_api_key

# Facebook Audience Network
FACEBOOK_ENABLED=False
FACEBOOK_PLACEMENT_ID=your_placement_id
FACEBOOK_API_KEY=your_facebook_access_token

# Smaato
SMAATO_ENABLED=False
SMAATO_PUBLISHER_ID=your_publisher_id
SMAATO_ADSPACE_ID=your_adspace_id

# AppLovin MAX
APPLOVIN_ENABLED=False
APPLOVIN_SDK_KEY=your_applovin_sdk_key

# ironSource
IRONSOURCE_ENABLED=False
IRONSOURCE_APP_KEY=your_ironsource_app_key

# Ad Request Settings
AD_REQUEST_TIMEOUT=5
# Aiven PostgreSQL Configuration
# Copy this to .env and fill in your actual values from Aiven console

AIVEN_HOST=migpoints-yourname.aivencloud.com
AIVEN_PORT=12345
AIVEN_DB=defaultdb
AIVEN_USER=avnadmin
AIVEN_PASSWORD=your-secure-password-here

# Flask Configuration
SECRET_KEY=change-this-to-random-secret-key
FLASK_ENV=production

# Optional: Crypto API Keys (for later)
BINANCE_API_KEY=
PAYFAST_MERCHANT_ID=
PAYFAST_MERCHANT_KEY=